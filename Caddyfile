# Outline Caddyfile for Cloudflare subdomain
outline.milagros.me {
  reverse_proxy outline:3000
}

# Mailu Domain - Caddy handles all HTTP-to-HTTPS redirection and TLS termination automatically.
https://mail.milagros.me {
  # Forward all traffic to the Mailu front container's internal HTTP port (80).
  # Caddy performs HTTPS termination here, Mailu receives plain HTTP.
  reverse_proxy mailu-front:80
}